<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:ScheduleBSUIR.Models"
             xmlns:converters="clr-namespace:ScheduleBSUIR.Helpers.Converters"
             x:Class="ScheduleBSUIR.View.Templates.LessonTemplates">
    <converters:ScheduleToColorConverter
        x:Key="ScheduleToColorConverter"/>

    <DataTemplate
        x:Key="ActiveLessonTemplate"
        x:DataType="model:Schedule">
        <Border
            StrokeShape="RoundRectangle 8"
            StrokeThickness="0"
            HeightRequest="70"
            BackgroundColor="#121212"
            Padding="10,5">
            <Grid
                ColumnSpacing="8"
                ColumnDefinitions="auto,auto,*,auto">

                <Grid
                    Grid.Column="0"
                    VerticalOptions="Center"
                    Margin="8,0,0,0"
                    RowSpacing="2"
                    RowDefinitions="auto,auto">
                    <Label
                        HorizontalOptions="End"
                        Grid.Row="0"
                        Style="{StaticResource LabelBodyPrimaryStyle}"
                        Text="{Binding StartLessonTime, StringFormat='{}{0:HH:mm}'}">
                    </Label>
                    <Label
                        HorizontalOptions="End"
                        Grid.Row="1"
                        Style="{StaticResource LabelBodyPrimaryStyle}"
                        FontSize="13"
                        Text="{Binding EndLessonTime, StringFormat='{}{0:HH:mm}'}">
                    </Label>
                </Grid>

                <RoundRectangle
                    Grid.Column="1"
                    HeightRequest="60"
                    WidthRequest="8"
                    CornerRadius="4"
                    BackgroundColor="{Binding ., Converter={StaticResource ScheduleToColorConverter}}">
                </RoundRectangle>

                <Grid
                    Grid.Column="2"
                    VerticalOptions="Center"
                    RowDefinitions="auto,auto">
                    <Label
                        Grid.Row="0"
                        Style="{StaticResource LabelBodyHeaderStyle}"
                        Text="{Binding Subject}">
                    </Label>
                    <Label
                        Grid.Row="1"
                        Style="{StaticResource LabelBodySecondaryStyle}"
                        Text="{Binding Auditories[0]}">
                    </Label>
                </Grid>

                <HorizontalStackLayout
                    Grid.Column="3"
                    Spacing="-25"
                    HorizontalOptions="End"
                    BindableLayout.ItemsSource="{Binding Employees}">

                    <BindableLayout.ItemTemplate>
                        <DataTemplate
                            x:DataType="model:Employee">
                            <Image
                                VerticalOptions="Center"
                                HeightRequest="50"
                                Aspect="AspectFill"
                                Source="{Binding PhotoLink}">

                                <Image.Clip>
                                    <EllipseGeometry
                                        Center="25,25"
                                        RadiusX="25"
                                        RadiusY="25"/>
                                </Image.Clip>

                                <Image.Shadow>
                                    <Shadow
                                        Brush="Black"
                                        Opacity="0.5"
                                        Radius="20"/>
                                </Image.Shadow>
                            </Image>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </HorizontalStackLayout>
            </Grid>
        </Border>
    </DataTemplate>

    <DataTemplate
        x:Key="InactiveLessonTemplate"
        x:DataType="model:Schedule">
        <Border
            Opacity="0.35"
            StrokeShape="RoundRectangle 8"
            StrokeDashArray="8,8"
            Stroke="White"
            StrokeThickness="1"
            HeightRequest="45"
            BackgroundColor="Transparent"
            Padding="10,5">
            <Grid
                ColumnSpacing="12"
                ColumnDefinitions="auto,auto,*">

                <Grid
                    Grid.Column="0"
                    VerticalOptions="Center"
                    RowSpacing="2"
                    RowDefinitions="auto,auto">
                    <Label
                        HorizontalOptions="End"
                        Grid.Row="0"
                        Style="{StaticResource LabelBodyPrimaryStyle}"
                        FontSize="13"
                        Text="{Binding StartLessonTime, StringFormat='{}{0:HH:mm}'}">
                    </Label>
                    <Label
                        HorizontalOptions="End"
                        Grid.Row="1"
                        Style="{StaticResource LabelBodyPrimaryStyle}"
                        FontSize="11"
                        Text="{Binding EndLessonTime, StringFormat='{}{0:HH:mm}'}">
                    </Label>
                </Grid>

                <RoundRectangle
                    Grid.Column="1"
                    HeightRequest="30"
                    WidthRequest="5"
                    CornerRadius="2.5"
                    BackgroundColor="{Binding ., Converter={StaticResource ScheduleToColorConverter}}">
                </RoundRectangle>

                <Label
                    Grid.Column="2"
                    VerticalOptions="Center"
                    Grid.Row="0"
                    FontSize="18"
                    Style="{StaticResource LabelBodyHeaderStyle}"
                    Text="{Binding Subject}">
                </Label>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>