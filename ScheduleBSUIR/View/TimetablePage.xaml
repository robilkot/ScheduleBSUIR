                <TapGestureRecognizer
                    Tapped="TapGestureRecognizer_Tapped"/>
            </Border.GestureRecognizers>
            <Label
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Style="{StaticResource LabelBodyPrimaryStyle}"
                Text="{Binding SelectedTab}"/>
        </Border>

