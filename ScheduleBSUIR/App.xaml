<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ScheduleBSUIR"
             xmlns:converters="clr-namespace:ScheduleBSUIR.Helpers.Converters"
             x:Class="ScheduleBSUIR.App">
    <Application.Resources>
        <ResourceDictionary>
            <converters:IsNotNullOrEmptyConverter
                x:Key="IsNotNullOrEmptyConverter"/>
            <converters:IsNullOrEmptyConverter
                x:Key="IsNullOrEmptyConverter"/>
            <converters:TimetableToHeaderTextConverter
                x:Key="TimetableToHeaderTextConverter"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="View/Templates/LessonTemplates.xaml" />
                <ResourceDictionary Source="View/Templates/HeaderTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
