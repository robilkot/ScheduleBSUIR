<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ScheduleBSUIR.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:ScheduleBSUIR.View"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab
            Title="Groups">
            <ShellContent
                ContentTemplate="{DataTemplate view:GroupListPage}"/>
        </Tab>
        <Tab
            Title="Employees">
            <ShellContent
                ContentTemplate="{DataTemplate view:EmployeesListPage}"/>
        </Tab>
        <Tab
            IsVisible="True"
            Title="Debug">
            <ShellContent
                ContentTemplate="{DataTemplate view:DebugLogPage}"/>
        </Tab>
    </TabBar>
</Shell>
